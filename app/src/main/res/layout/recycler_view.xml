<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_view_relative_final">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_view_relative_layout">

    <ImageView
        android:id="@+id/recycler_view_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/recycler_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginStart="49dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@id/recycler_view_image_view"
        android:text="Name"/>

    <TextView
        android:id="@+id/recycler_view_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/recycler_view_image_view"
        android:layout_below="@+id/recycler_view_name"
        android:text="RealName" />

    <TextView
        android:id="@+id/recycler_view_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:text="Team"
        android:layout_toEndOf="@id/recycler_view_real_name"
        android:layout_below="@+id/recycler_view_name"/>

    <TextView
        android:id="@+id/recycler_view__first_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view_real_name"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@id/recycler_view_image_view"
        android:inputType="number"
        android:text="FirstAppearance" />

    <TextView
        android:id="@+id/recycler_view_createdby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:text="CreatedBy"
        android:layout_toEndOf="@id/recycler_view__first_appearance"
        android:layout_below="@id/recycler_view_team"/>

    <TextView
        android:id="@+id/recycler_view_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view__first_appearance"
        android:layout_marginStart="49dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/recycler_view_image_view"
        android:text="publisher" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recycler_view_relative_layout">

        <TextView
            android:id="@+id/recycler_view_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="36dp"
            android:inputType="textMultiLine"
            android:text="BIO" />

    </RelativeLayout>



</RelativeLayout>